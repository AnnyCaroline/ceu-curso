par/and do
    var int i;
    loop i in [-25 -> 25] do
        emit GRAPHICS_DRAW_PIXEL(i,i);
        await 100ms;
    end
with
    var int i;
    loop i in [-25 -> 25] do
        emit GRAPHICS_DRAW_PIXEL(-i,i);
        await 100ms;
    end
with
    var int i;
    loop i in [-25 -> 25] do
        emit GRAPHICS_DRAW_PIXEL(0,i);
        await 100ms;
    end
with
    var int i;
    loop i in [-25 -> 25] do
        emit GRAPHICS_DRAW_PIXEL(i,0);
        await 100ms;
    end
end
